{
  "compilerOptions": {
    "target": "es2016",

    "experimentalDecorators": true,

    "emitDecoratorMetadata": true,

    "module": "commonjs",

    "outDir": "./dist",

    "baseUrl": "./",

    /*"paths": {
      "@modules/*": ["modules/*"],
      "@config/*": ["config/*"],
      "@shared/*": ["shared/*"],
      "@errors/*": ["shared/errors/*"],
      "@utils/*": ["utils/*"]
    },*/
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  }
}
